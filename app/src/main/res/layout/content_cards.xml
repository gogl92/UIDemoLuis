<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:padding="16dp"
    android:orientation="horizontal"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:background="#eeeeee"

    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="354dp"
android:layout_marginTop="50dp"        android:id="@+id/cv"
        card_view:cardCornerRadius="4dp"

        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="10dp"
            >

            <RelativeLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="#00b9e7"

                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:id="@+id/linearLayout">

                <ImageView
                    android:layout_width="122dp"
                    android:layout_height="63dp"
                    android:id="@+id/imageView2"
                    android:src="@drawable/messages_cards"
                    android:layout_gravity="center_horizontal"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true" />

            </RelativeLayout>

            <RelativeLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_below="@+id/linearLayout">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lester Nygard"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@android:color/black"
                    android:id="@+id/textView2"
                    android:layout_marginTop="29dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="26dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="This is a sample message that crosses over in two lines and goes on for a while"
                    android:id="@+id/textView3"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_below="@+id/textView2"
                    android:layout_alignStart="@+id/textView2"
                    android:textStyle="bold" />
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:layout_below="@+id/textView3"
                    android:layout_alignStart="@+id/textView3"
                    android:background="@android:color/darker_gray"
                    android:layout_marginTop="21dp"
                    android:layout_marginRight="15dp"

                    android:layout_alignEnd="@+id/textView3"
                    android:id="@+id/view"></View>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="GOT IT"
                    android:textColor="#FF0068"
                    android:id="@+id/textView4"
                    android:layout_marginStart="23dp"
                    android:layout_below="@+id/view"
                    android:layout_toEndOf="@+id/textView2"
                    android:layout_marginTop="24dp" />

                <ImageButton
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:id="@+id/imageView3"
                    android:background="@drawable/tick_mark"
                    android:layout_alignBottom="@+id/textView4"
                    android:layout_alignEnd="@+id/view"
                    android:layout_alignTop="@+id/textView4" />
            </RelativeLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>